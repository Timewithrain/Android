<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/activity_main_et_gender"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="596dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/activity_main_tv_gender" />

    <TextView
        android:id="@+id/activity_main_tv_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginBottom="548dp"
        android:text="年龄："
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/activity_main_tv_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginBottom="612dp"
        android:text="性别："
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/activity_main_et_name"
        android:layout_width="215dp"
        android:layout_height="49dp"
        android:layout_marginStart="160dp"
        android:layout_marginBottom="664dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/activity_main_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginBottom="676dp"
        android:text="姓名："
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/activity_main_et_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="532dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/activity_main_tv_age" />

    <Button
        android:id="@+id/activity_main_btn_query"
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="472dp"
        android:text="查询"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/activity_main_btn_add" />

    <Button
        android:id="@+id/activity_main_btn_add"
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="472dp"
        android:text="添加"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ListView
        android:id="@+id/activity_main_lv_persons"
        android:layout_width="409dp"
        android:layout_height="442dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/activity_main_btn_update"
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:layout_marginStart="31dp"
        android:layout_marginBottom="29dp"
        android:text="修改"
        app:layout_constraintBottom_toTopOf="@+id/activity_main_lv_persons"
        app:layout_constraintStart_toEndOf="@+id/activity_main_btn_query" />

    <Button
        android:id="@+id/activity_main_btn_delete"
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="29dp"
        android:text="删除"
        app:layout_constraintBottom_toTopOf="@+id/activity_main_lv_persons"
        app:layout_constraintStart_toEndOf="@+id/activity_main_btn_update" />

    <TextView
        android:id="@+id/activity_main_tv_status"
        android:layout_width="70dp"
        android:layout_height="22dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="4dp"
        android:text="status"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>