<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/activity_main_tv_solgan"
        android:layout_width="230dp"
        android:layout_height="37dp"
        android:gravity="center"
        android:text="Enjoy the Loop!"
        android:textColor="#E91E63"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.051" />

    <Button
        android:id="@+id/activity_main_btn_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="32dp"
        android:text="暂停"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/activity_main_btn_start" />

    <Button
        android:id="@+id/activity_main_btn_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="32dp"
        android:text="播放"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/activity_main_btn_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="32dp"
        android:text="停止"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/activity_main_btn_pause" />

    <ListView
        android:id="@+id/activity_main_lv_musicList"
        android:layout_width="413dp"
        android:layout_height="369dp"
        android:layout_marginBottom="44dp"
        app:layout_constraintBottom_toTopOf="@+id/activity_main_btn_pause"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/activity_main_btn_next"
        android:layout_width="105dp"
        android:layout_height="47dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="38dp"
        android:text="下一首"
        app:layout_constraintBottom_toTopOf="@+id/activity_main_lv_musicList"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/activity_main_btn_last"
        android:layout_width="105dp"
        android:layout_height="47dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="38dp"
        android:text="上一首"
        app:layout_constraintBottom_toTopOf="@+id/activity_main_lv_musicList"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>